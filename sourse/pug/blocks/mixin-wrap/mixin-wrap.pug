mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider

mixin call()
	+b.callBock.text-center&attributes(attributes)
		+e.call Или звоните
		+e.tel(href="tel:88003334108") #[span.text-primary 8 800] 333 41 08

mixin callForm(t='Обратиться за помощью')
	+form-wrap(class="callForm")
		+e.main
			+pic('icon-help','','')(class="d-none d-md-block")
			+input('','tel')
			+e.btn(type="submit")= t
		+call


