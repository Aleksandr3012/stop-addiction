mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank")
		if block
			block
		else
			img(src=`img/@2x/${icon}.png`, alt="")
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('vk','https://vk.com/stopzavisimost16')
			+item-sos('ok','https://ok.ru/group/56257782481087')
			+item-sos('inst','https://www.instagram.com/stopzavisimost.info/')

